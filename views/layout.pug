    script(src='/javascripts/main.js')

#signinmodal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='signinmodal', aria-hidden='true')
  .modal-dialog(role='document')
    .modal-content
      .modal-header
        h5#exampleModalLabel.modal-title Sign In
        button.close(type='button', data-dismiss='modal', aria-label='Close')
          span(aria-hidden='true') Ã—
      form(method="POST" action='/login')
        .modal-body
          .form-group
            label(for='username') Username
            input#username.form-control(name="username", type='text', placeholder='Username')
          .form-group
              label(for='password') Password
              input#password.form-control(name="password", type='password', placeholder='Password')
        .modal-footer
          button#signin.btn.btn-primary.btn-block(type='submit') Enter